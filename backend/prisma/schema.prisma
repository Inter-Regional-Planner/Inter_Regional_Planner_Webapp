// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  //directUrl = env("DIRECT_URL")
}


model User {
  id        Int      @id @default(autoincrement())
  name      String
  surname   String?  @default("")
  email     String   @unique
  password  String   // hashed
  country   String?
  dob       DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  plans     Plan[]
}

model Country {
  id                    Int      @id @default(autoincrement())
  code                  String   @unique // "TT", "BB", etc.
  name                  String

  immigrationUrl        String?
  competentAuthorityUrl String?
  formsUrl              String?
  notes                 String?


  fromPlans Plan[] @relation("FromCountry")
  toPlans   Plan[] @relation("ToCountry")
}

model Category {
  id          Int      @id @default(autoincrement())
  code        String   @unique // "artisan", "teacher", etc.
  label       String
  description String?

  plans Plan[]
}

model Plan {
  id Int @id @default(autoincrement())

  user   User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId Int?

  fromCountry     Country @relation("FromCountry", fields: [fromCountryCode], references: [code], onDelete: Restrict)
  fromCountryCode String

  toCountry       Country @relation("ToCountry", fields: [toCountryCode], references: [code], onDelete: Restrict)
  toCountryCode   String

  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  categoryId Int?

  summary       String
  notes         String
  checklistJson Json
  timelineJson  Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([fromCountryCode])
  @@index([toCountryCode])
  @@index([categoryId])
}
