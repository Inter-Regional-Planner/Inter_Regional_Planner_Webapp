generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  surname   String?
  email     String   @unique
  password  String   // hashed
  country   String?
  dob       DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  plans     Plan[]
}

model Plan {
  id            Int      @id @default(autoincrement())
  user          User?    @relation(fields: [userId], references: [id])
  userId        Int?
  fromCountry   String
  toCountry     String
  category      String
  summary       String
  notes         String
  checklistJson Json
  timelineJson  Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Country {
  id                    Int      @id @default(autoincrement())
  code                  String   @unique
  name                  String
  immigrationUrl        String?
  competentAuthorityUrl String?
  formsUrl              String?
  notes                 String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

